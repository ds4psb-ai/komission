# ===========================================
# K-MEME FACTORY - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development  # development | staging | production
ALLOW_DEV_LOGIN=true  # development only; controls /api/v1/auth/token

# PostgreSQL Database
POSTGRES_USER=kmeme_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=kmeme_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# JWT Security (IMPORTANT: Generate a strong 256-bit secret!)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_super_secret_key_here_at_least_256_bits

# Google OAuth 2.0
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AI APIs
GEMINI_API_KEY=your_gemini_api_key
CLAUDE_API_KEY=your_claude_api_key

# AWS S3 (for video/image storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=kmeme-factory-assets

# Monitoring (optional)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
